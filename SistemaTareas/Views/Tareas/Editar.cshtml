@using SistemaTareas.Models
@model TareaCLS

@{
    ViewBag.Title = "Editar";
    List<SelectListItem> listaNivelUrgencia = (List<SelectListItem>)ViewBag.ListarNivelUrgencia;
    List<SelectListItem> listarCategorias = (List<SelectListItem>)ViewBag.listarCategorias;
    List<SelectListItem> listaEstados = (List<SelectListItem>)ViewBag.listaEstados;
}


<h2 class="m-5 text-center">Editar Tarea</h2>


<div class="d-flex justify-content-center">
    <div class="shadow-lg p-3 mb-5 bg-body rounded w-50 justify-content-center">
        <div class="row justify-content-center">
            <div class="col-md-6">
                @using (Html.BeginForm("Editar", "Tareas", FormMethod.Post, new {id="frmEditar" }))
                {

                    <div>
                        @Html.LabelFor(p => p.IdTarea)
                        @Html.TextBoxFor(p => p.IdTarea, new { @class = "form-control", @readOnly = true })
                    </div>
                    <div>
                        @Html.LabelFor(p => p.tituloTarea)
                        @Html.TextBoxFor(p => p.tituloTarea, new { @class = "form-control" })
                    </div>
                    <div>
                        @Html.LabelFor(p => p.descripcionTarea)
                        @Html.TextBoxFor(p => p.descripcionTarea, new { @class = "form-control" })
                    </div>
                    <div>
                        @Html.LabelFor(p => p.fechaInicio)
                        @Html.EditorFor(p => p.fechaInicio, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div>
                        @Html.LabelFor(p => p.fechaTermino)
                        @Html.EditorFor(p => p.fechaTermino, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div>
                        @Html.LabelFor(p => p.IdCategoria)
                        @Html.DropDownList("IdCategoria", listarCategorias, new { @class = "form-select" })
                    </div>
                    <div>
                        @Html.LabelFor(p => p.IdEstado)
                        @Html.DropDownList("IdEstado", listaEstados, new { @class = "form-select" })
                    </div>
                    <div>
                        @Html.LabelFor(p => p.IdNivelUrgencia)
                        @Html.DropDownList("IdNivelUrgencia", listaNivelUrgencia, new { @class = "form-select" })
                    </div>

                    <div class="text-center w-100 d-flex justify-content-center">
                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-primary m-2" id="btnTrigger" data-bs-toggle="modal" data-bs-target="#exampleModal">
                           Guardar
                        </button>

                        @Html.ActionLink("Cancelar", "Index", "Tareas", null, new { @class = "btn btn-danger m-2" })
                    </div>

                }
            </div>

        </div>

    </div>
</div>



<!-- Modal -->
<div class="modal fade " id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">¿Desea guardar su actualizacion?</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="Guardar()">Guardar cambios</button>
            </div>
        </div>
    </div>
</div>

<script>
    function Guardar() {

        var frmEditar = document.getElementById("frmEditar");

        frmEditar.submit();
      
    }
   

</script>